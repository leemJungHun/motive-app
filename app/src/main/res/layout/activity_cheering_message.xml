<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFFFF"
        >


        <TextView
            android:id="@+id/medal_select_Text"
            android:layout_width="@dimen/width_416"
            android:layout_height="wrap_content"
            android:text="@string/cheering_message"
            android:textSize="@dimen/font_36sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/medal"
            android:textColor="@color/text_black"
            android:textStyle="bold"
            tools:ignore="UnusedAttribute" />

        <ImageView
            android:id="@+id/medal"
            android:layout_width="240dp"
            android:layout_height="547dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/medal_select_Text"
            android:src="@drawable/motive_img_009_medal_g"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/medal_effect"
            android:layout_width="@dimen/width_384"
            android:layout_height="@dimen/height_288"
            app:layout_constraintStart_toStartOf="@id/medal"
            app:layout_constraintEnd_toEndOf="@id/medal"
            app:layout_constraintBottom_toBottomOf="@id/medal"
            android:background="@drawable/twinkle_anim"
            tools:ignore="ContentDescription" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>