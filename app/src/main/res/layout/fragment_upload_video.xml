<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tabBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_64"
            android:background="#2699fb"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="@dimen/width_320"
                android:layout_height="@dimen/height_32"
                android:gravity="center"
                android:text="응원영상"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/font_20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_6"
            android:background="@drawable/blue_shadows"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tabBar" />

        <ImageView
            android:layout_width="@dimen/width_384"
            android:layout_height="@dimen/width_320"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/upload_video_btn"
            android:layout_marginBottom="@dimen/margin_56"
            android:src="@drawable/motive_img_001"
            />

        <Button
            android:id="@+id/upload_video_btn"
            android:layout_width="@dimen/width_416"
            android:layout_height="@dimen/height_64"
            app:layout_constraintBottom_toTopOf="@id/example_video_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/margin_16"
            android:text="동영상 업로드하기"
            android:textSize="@dimen/font_20sp"
            android:textColor="#2699fb"
            android:background="@drawable/blue_border_15"
            />

        <Button
            android:id="@+id/example_video_btn"
            android:layout_width="@dimen/width_416"
            android:layout_height="@dimen/height_64"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/margin_64"
            android:text="응원 동영상 예시"
            android:textSize="@dimen/font_20sp"
            android:textColor="#2699fb"
            android:background="@drawable/blue_border_15"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>