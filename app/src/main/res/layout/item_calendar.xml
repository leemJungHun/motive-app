<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_48"
    android:layout_height="@dimen/width_48"
    android:id="@+id/calendar_view"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/calender_back"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/font_16sp"
        android:textColor="#414141"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/schedule"
        android:visibility="gone"
        android:layout_width="@dimen/icon_8"
        android:layout_height="@dimen/icon_8"
        android:scaleType="centerCrop"
        android:src="@drawable/calendar_schedule"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_date"
        />

    <TextView
        android:id="@+id/medal_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/medal_gold_back"
        android:visibility="gone"
        />
</androidx.constraintlayout.widget.ConstraintLayout>