<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_64"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/family_profile"
        android:layout_width="@dimen/icon_64"
        android:layout_height="@dimen/icon_64"
        android:src="@drawable/profile_base"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/family_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/family_profile"
        android:layout_marginStart="@dimen/margin_16"
        android:textSize="@dimen/font_17sp"
        android:text="홍길동"
        />
    <ImageView
        android:id="@+id/family_delete"
        android:layout_width="@dimen/icon_32"
        android:layout_height="@dimen/icon_32"
        android:src="@drawable/motive_icon_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/margin_8"
        />
</androidx.constraintlayout.widget.ConstraintLayout>